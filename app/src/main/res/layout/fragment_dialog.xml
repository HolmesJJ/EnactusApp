<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/WHITE">

    <LinearLayout
        android:id="@+id/ll_title_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:src="@drawable/ic_toolbar_back"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:text="@string/dialog"
            android:textColor="@color/BLACK"
            android:textSize="30sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_selection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:textColor="@color/BLACK"
        android:textSize="15sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_title_container"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="@dimen/bottom_bar_height">

        <LinearLayout
            android:id="@+id/ll_message_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="90dp"
            android:background="@drawable/ll_dialog_shape"
            android:elevation="5dp"
            android:visibility="invisible">

            <TextView
                android:id="@+id/tv_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="16dp"
                android:textColor="@color/BLACK"
                android:textSize="20sp" />

        </LinearLayout>

        <View
            android:id="@+id/split_line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="32dp"
            android:layout_centerVertical="true"
            android:background="@color/TRANSPARENT"
            android:layout_below="@+id/ll_message_container"/>

        <RelativeLayout
            android:id="@+id/rl_possible_answers_keyword_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/split_line1"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:background="@color/possible_answer_keyword_bg">

            <TextView
                android:id="@+id/tv_possible_answers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/possible_answer"
                android:textSize="25sp"
                android:textColor="@color/BLACK"
                android:background="@color/TRANSPARENT"/>

            <EditText
                android:id="@+id/et_keyword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:textSize="30sp"
                android:textColor="@color/BLACK"
                android:background="@drawable/et_keyword_shape"
                android:layout_toStartOf="@+id/ib_backspace"
                android:layout_centerVertical="true"
                android:saveEnabled="false"
                android:padding="5dp"
                android:visibility="invisible"
                android:textCursorDrawable="@drawable/et_cursor"/>

            <ImageButton
                android:id="@+id/ib_backspace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:src="@drawable/ic_backspace"
                android:elevation="2dp"
                android:visibility="invisible"
                android:background="@drawable/ibtn_backspace_shape" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/rl_possible_answers_keyword_container">

            <com.example.enactusapp.Adapter.CustomViewPager
                android:id="@+id/dialog_answer_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="80dp"
                android:layout_marginBottom="10dp"/>

            <ImageView
                android:id="@+id/iv_scroll_left"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:src="@drawable/ic_arrow_left"
                android:clickable="true"
                android:focusable="true" />

            <ImageView
                android:id="@+id/iv_scroll_right"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_arrow_right"
                android:clickable="true"
                android:focusable="true" />

        </RelativeLayout>

    </RelativeLayout>

    <ProgressBar
        android:id="@+id/pb_gaze"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottomBar"
        style="@style/pb_gaze"
        android:progressDrawable="@drawable/pb_gaze"/>

    <com.example.enactusapp.UI.BottomBar
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_bar_height"
        android:layout_alignParentBottom="true" />

    <com.example.enactusapp.EyeTracker.PointView
        android:id="@+id/pv_point"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/giv_loading"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/loading"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

</RelativeLayout>